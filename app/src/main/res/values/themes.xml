<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SanDiegoZooSeeker" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_500</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey_200</item>
        <!-- Bottom navigation -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <!-- Chip theme -->
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <!-- Bottom Navigation Theme -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/secondary_500</item>
        <item name="colorOnSurfaceVariant">@color/grey_500</item>
        <item name="colorSecondaryContainer">@color/secondary_200</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SanDiegoZooSeeker">
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_500</item>
    </style>

    <!-- Button Theme -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.App.LabelLarge</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="TextAppearance.App.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="ThemeOverlay.Material3.Button">
        <item name="colorPrimary">@color/secondary_700</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <!-- Search Bar Style -->
    <style name="Widget.App.TextInputLayout.SearchBar" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout.SearchBar</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SearchBar</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="ShapeAppearance.App.SearchBar" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout.SearchBar" parent="">
        <item name="startIconDrawable">@drawable/search_24px</item>
        <item name="backgroundTint">@color/grey_100</item>
    </style>

    <style name="Widget.App.TextInputEditText.SearchBar" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">textAutoCorrect</item>
    </style>

    <!-- Search Item Theme -->
    <style name="Widget.App.MaterialCardView.SearchItem" parent="Widget.Material3.CardView.Filled">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.MaterialCardView.SearchItem</item>
        <item name="cardBackgroundColor">@color/primary_100</item>
    </style>

    <style name="ThemeOverlay.App.MaterialCardView.SearchItem" parent="">
        <item name="colorOnSurface">@color/white</item>
    </style>

    <!-- Chip theme -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Chip</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodySmall</item>
        <item name="sizePercent">80</item>
    </style>

    <style name="ThemeOverlay.App.Chip" parent="">
        <item name="colorOnSurface">@color/primary_200</item>
    </style>
</resources>